<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipChildren="false"
		android:background="@color/white"
		tools:context=".page.fragment.TravelFragment">
	<androidx.viewpager.widget.ViewPager
			android:layout_height="0dp"
			android:clipChildren="false"
			app:layout_constraintTop_toTopOf="parent"
			android:background="@color/transparent"
			android:id="@+id/travel_view_pager"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="60dp"
			android:layout_marginStart="42dp"
			android:layout_marginTop="40dp"
			android:layout_marginEnd="42dp"
			android:layout_width="0dp"/>
	<hll.zpf.starttravel.common.components.PagerIndexView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:number="4"
			app:current_index="1"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toBottomOf="@+id/travel_view_pager"
			android:layout_marginTop="16dp"
			android:id="@+id/pager_index"/>
</androidx.constraintlayout.widget.ConstraintLayout>

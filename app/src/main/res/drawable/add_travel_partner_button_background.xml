<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<layer-list>//表示使用图形层级
			<item>
				<shape>
					<corners android:radius="100dp" />
					<solid android:color="@color/unableColor"/>
					<size android:width="20dp" android:height="20dp" />
				</shape>
			</item>
			<item android:bottom="3dp" android:left="9dp" android:right="9dp" android:top="3dp">
				<shape android:shape="rectangle">
					<solid android:color="@color/white"/>
					<corners android:radius="100dp"/>
				</shape>
			</item>
			<item android:bottom="9dp" android:left="3dp" android:right="3dp" android:top="9dp">
				<shape android:shape="rectangle">
					<solid android:color="@color/white"/>
					<corners android:radius="100dp"/>
				</shape>
			</item>
		</layer-list>
	</item>
	<item>
		<layer-list>//表示使用图形层级
			<item>
				<shape>
					<corners android:radius="100dp" />
					<solid android:color="@color/baseColor"/>
					<size android:width="20dp" android:height="20dp" />
				</shape>
			</item>
			<item android:bottom="3dp" android:left="9dp" android:right="9dp" android:top="3dp">
				<shape android:shape="rectangle">
					<solid android:color="@color/white"/>
					<corners android:radius="100dp"/>
				</shape>
			</item>
			<item android:bottom="9dp" android:left="3dp" android:right="3dp" android:top="9dp">
				<shape android:shape="rectangle">
					<solid android:color="@color/white"/>
					<corners android:radius="100dp"/>
				</shape>
			</item>
		</layer-list>
	</item>
</selector>
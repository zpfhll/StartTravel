<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".page.HomeActivity">
	
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="70dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@color/white"
			android:id="@+id/linearLayout">
		
		<hll.zpf.starttravel.common.components.ITButton
				app:image="@mipmap/travel"
				app:text="@string/home_001"
				app:image_width="27dp"
				app:image_height="27dp"
				app:text_size="10dp"
				app:text_color="@color/baseColor"
				app:image_not_select="@mipmap/travel_unselect"
				app:text_not_select_color="@color/unableColor"
				app:selected="true"
				android:onClick="clickAction"
				android:layout_width="0dp"
				android:layout_height="45dp"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:id="@+id/travel_bt"/>
		
		<hll.zpf.starttravel.common.components.ITButton
				app:image="@mipmap/map"
				app:text="@string/home_002"
				app:image_width="27dp"
				app:image_height="27dp"
				app:text_size="10dp"
				app:text_color="@color/baseColor"
				app:image_not_select="@mipmap/map_unselect"
				app:text_not_select_color="@color/unableColor"
				app:selected="false"
				android:onClick="clickAction"
				android:layout_width="0dp"
				android:layout_height="45dp"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:id="@+id/map_bt"/>
		
		<TextView
				android:layout_width="0dp"
				android:layout_height="43dp"
				android:layout_weight="1"
				android:background="@color/white"
				android:layout_gravity="center_vertical"
				android:focusable="false"/>
		
		<hll.zpf.starttravel.common.components.ITButton
				app:image="@mipmap/history"
				app:text="@string/home_003"
				app:image_width="27dp"
				app:image_height="27dp"
				app:text_size="10dp"
				app:text_color="@color/baseColor"
				app:image_not_select="@mipmap/history_unselect"
				app:text_not_select_color="@color/unableColor"
				app:selected="false"
				android:onClick="clickAction"
				android:layout_width="0dp"
				android:layout_height="45dp"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:id="@+id/history_bt"/>
		
		<hll.zpf.starttravel.common.components.ITButton
				app:image="@mipmap/self"
				app:text="@string/home_004"
				app:image_width="27dp"
				app:image_height="27dp"
				app:text_size="10dp"
				app:text_color="@color/baseColor"
				app:image_not_select="@mipmap/self_unselect"
				app:text_not_select_color="@color/unableColor"
				app:selected="false"
				android:onClick="clickAction"
				android:layout_width="0dp"
				android:layout_height="45dp"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:id="@+id/self_bt"/>
	</LinearLayout>
	
	<FrameLayout
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout"
			android:id="@+id/home_page_fly"
			android:background="@color/background_color"/>
	
	<View
			android:layout_width="30dp"
			android:layout_height="3dp"
			android:id="@+id/selected_view"
			android:background="@color/orange"
			app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
			android:layout_marginBottom="58dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="28dp"/>
	
	<Button
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:background="@drawable/add_travel_button_background"
			android:id="@+id/add_travel_btn"
			android:stateListAnimator="@null"
			android:onClick="clickAction"
			android:elevation="@dimen/font_size_s1"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="40dp"/>
	
	<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:focusable="true"
			android:clickable="true"
			android:background="@color/half_transparent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:id="@+id/add_travel_background"
			android:visibility="gone"/>
	
	
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="0dp"
			android:layout_height="230dp"
			android:background="@drawable/circle_round_top_edge_white_10"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:id="@+id/add_travel_platform"
			android:visibility="gone"
			>
		
		
		<Button
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:id="@+id/close_btn"
				android:onClick="clickAction"
				android:background="@drawable/close_button_background"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginStart="20dp"
				app:layout_constraintTop_toTopOf="parent"
				android:layout_marginTop="20dp"/>
		
		<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/drag_view"
				android:focusable="true"
				android:clickable="true"
				android:layout_width="wrap_content"
				android:layout_height="20dp"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginTop="2dp">
			
			<TextView
					android:layout_width="60dp"
					android:layout_height="7dp"
					android:background="@drawable/circle_gray"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintHorizontal_bias="0.5"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		
		<Button
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:id="@+id/travel_money_btn"
				android:onClick="clickAction"
				android:background="@drawable/travel_money_button_background"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/drag_view"
				android:layout_marginEnd="24dp"/>
		
		<Button
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:id="@+id/travel_only_btn"
				android:onClick="clickAction"
				android:background="@drawable/travel_only_button_background"
				app:layout_constraintStart_toEndOf="@+id/drag_view"
				android:layout_marginStart="24dp"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>
		
		<TextView
				android:text="@string/home_006"
				android:gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/textView18"
				android:textColor="@color/gray"
				android:textStyle="bold"
				android:textSize="@dimen/font_size_s4"
				app:layout_constraintTop_toBottomOf="@+id/travel_money_btn"
				android:layout_marginTop="2dp"
				app:layout_constraintStart_toStartOf="@+id/travel_money_btn"
				app:layout_constraintEnd_toEndOf="@+id/travel_money_btn"/>
		
		<TextView
				android:text="@string/home_007"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/textView19"
				android:textColor="@color/gray"
				android:textStyle="bold"
				android:textSize="@dimen/font_size_s4"
				app:layout_constraintEnd_toEndOf="@+id/travel_only_btn"
				app:layout_constraintStart_toStartOf="@+id/travel_only_btn"
				android:layout_marginTop="2dp"
				app:layout_constraintTop_toBottomOf="@+id/travel_only_btn"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
	
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 第一层 -->
	<item android:left="4dp" android:top="4dp" android:right="4dp">
		<shape>
			<solid android:color="@color/light_orange"/>
			<corners android:radius="10dp"/>
			<!-- 描边 -->
			<stroke android:width="0dp" android:color="@color/light_gray"/>
		</shape>
	</item>
	 <!--第二层-->
	<item android:bottom="4dp">
		<shape>
			<!--<solid android:color="@color/dialog_base_color"/>-->
			<gradient
			android:type="linear"
			android:angle="90"
			android:centerX="0"
			android:centerY="0"
			android:startColor="#0ccda3"
			android:endColor="@color/baseColor"
			android:useLevel="false" />
			<corners android:radius="10dp"/>
			<!-- 描边 -->
			<stroke android:width="1dp" android:color="@color/white"/>
		</shape>
	</item>
</layer-list>

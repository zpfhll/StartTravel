<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.LocationSelectActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.amap.api.maps.MapView>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/my_location_button"
        android:background="@drawable/my_location_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:onClick="baseClickAction"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/select_location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/location_select"
        app:layout_constraintBottom_toBottomOf="@+id/map_view"
        app:layout_constraintEnd_toEndOf="@+id/map_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/map_view" />

    <EditText
        android:id="@+id/search_content"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="@string/location_select_001"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/search_btn"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_btn"
        android:layout_width="52dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_background5"
        android:stateListAnimator="@null"
        android:text="@string/location_select_002"
        android:textColor="@color/white"
        android:onClick="baseClickAction"
        app:layout_constraintBottom_toBottomOf="@+id/search_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_content" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/back_button_background"
        android:onClick="baseClickAction"
        android:stateListAnimator="@null"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/search_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_content" />

    <ListView
        android:id="@+id/tips_list"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_round_edge_white"
        app:layout_constraintEnd_toStartOf="@+id/search_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toBottomOf="@+id/search_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
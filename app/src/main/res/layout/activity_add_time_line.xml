<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".page.AddTimeLineActivity">

    <hll.zpf.starttravel.common.components.CRImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="45dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="5dp" />

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/activity_title" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/add_step_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_image"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/add_step_002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textSize="@dimen/font_size_s2"
                android:textColor="@color/title_color"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:ems="10"
                android:maxLength="9"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/text_color"
                android:hint="@string/add_step_003"
                android:textSize="@dimen/font_size_s3"
                android:background="@drawable/circle_round_edge_white_10"
                android:id="@+id/step_name_editText"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView13"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:text="@string/add_step_004"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_s2"
                android:textColor="@color/title_color"
                android:id="@+id/textView21"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/step_name_editText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/add_step_005"
                android:textColor="@color/title_color"
                android:textSize="@dimen/font_size_s2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_button" />


            <EditText
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:maxLength="100"
                android:id="@+id/step_memo_editText"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="top"
                android:scrollbars="vertical"
                android:textColor="@color/text_color"
                android:hint="@string/add_step_006"
                android:textSize="@dimen/font_size_s3"
                android:background="@drawable/circle_round_edge_white_10"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView22"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/location_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:stateListAnimator="@null"
                android:onClick="baseClickAction"
                android:background="@drawable/location_button_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="@string/add_step_010"
                android:textSize="@dimen/font_size_s4"
                android:textColor="@color/gray"
                android:onClick="baseClickAction"
                app:layout_constraintBottom_toBottomOf="@+id/location_button"
                app:layout_constraintStart_toEndOf="@+id/location_button"
                app:layout_constraintTop_toTopOf="@+id/location_button" />

            <TextView
                android:id="@+id/step_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="TextView"
                android:textSize="@dimen/font_size_s5"
                android:textColor="@color/gray"
                app:layout_constraintBottom_toBottomOf="@+id/textView13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView13" />

            <Button
                android:id="@+id/delete_step"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background6"
                android:text="@string/add_step_008"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_s3"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/step_memo_editText" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
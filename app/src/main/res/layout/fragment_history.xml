<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/background_color"
		tools:context=".page.fragment.MeFragment">
	
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_height="0dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:background="@color/background_color"
			android:id="@+id/settings_layout"
			android:layout_width="0dp">
		
		<TextView
				android:text="@string/history_001"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/textView7"
				android:textColor="@color/text_color"
				android:textSize="@dimen/font_size_s3"
				android:layout_marginTop="16dp"
				app:layout_constraintTop_toTopOf="parent"
				android:layout_marginStart="16dp"
				app:layout_constraintStart_toStartOf="parent"/>
		
		<TextView
				android:layout_width="1dp"
				android:layout_height="40dp"
				android:id="@+id/textView11"
				android:background="@color/dark_gray"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				android:layout_marginTop="40dp"/>
		
		<TextView
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:id="@+id/textView14"
				app:layout_constraintTop_toBottomOf="@+id/start_day_layout"
				app:layout_constraintEnd_toStartOf="@+id/textView11"
				android:layout_marginTop="8dp"
				android:background="@color/dark_gray"
				android:layout_marginEnd="16dp"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginStart="24dp"/>
		
		<TextView
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:id="@+id/textView15"
				android:background="@color/dark_gray"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginEnd="24dp"
				app:layout_constraintStart_toEndOf="@+id/textView11"
				android:layout_marginStart="16dp"
				app:layout_constraintTop_toBottomOf="@+id/end_day_layout"
				android:layout_marginTop="8dp"/>
		
		<TextView
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:id="@+id/textView17"
				android:background="@color/dark_gray"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginStart="24dp"
				app:layout_constraintTop_toBottomOf="@+id/location_layout"
				android:layout_marginTop="8dp"
				app:layout_constraintEnd_toStartOf="@+id/textView11"
				android:layout_marginEnd="16dp"
				/>
		
		<!-- 开始的时间的选择 -->
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_height="wrap_content"
				android:background="@color/background_color"
				android:layout_width="wrap_content"
				app:layout_constraintEnd_toStartOf="@+id/textView11"
				android:layout_marginEnd="24dp"
				android:layout_marginTop="40dp"
				android:clickable="true"
				app:layout_constraintTop_toTopOf="parent"
				android:id="@+id/start_day_layout">
			
			<TextView
					android:text="@string/history_002"
					android:layout_width="37dp"
					android:layout_height="16dp"
					android:id="@+id/textView8"
					app:layout_constraintStart_toStartOf="parent"
					android:textColor="@color/gray"
					android:textSize="@dimen/font_size_s5"
					app:layout_constraintTop_toTopOf="parent"/>
			
			<TextView
					android:text="2019年12月12日"
					android:layout_width="112dp"
					android:layout_height="20dp"
					android:id="@+id/start_day"
					android:textSize="@dimen/font_size_s3"
					android:textColor="@color/text_color"
					app:layout_constraintTop_toBottomOf="@+id/textView8"
					android:layout_marginTop="4dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toEndOf="@+id/imageView9"
					android:layout_marginStart="8dp"/>
			
			<ImageView
					android:src="@mipmap/calendar_start"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:id="@+id/imageView9"
					app:layout_constraintTop_toTopOf="@+id/start_day"
					app:layout_constraintBottom_toBottomOf="@+id/start_day"
					app:layout_constraintEnd_toStartOf="@+id/start_day"
					app:layout_constraintStart_toStartOf="parent"/>
		
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		<!-- 结束的时间的选择 -->
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_height="41dp"
				android:background="@color/background_color"
				android:layout_width="134dp"
				android:id="@+id/end_day_layout"
				app:layout_constraintStart_toEndOf="@+id/textView11"
				android:layout_marginStart="24dp"
				android:layout_marginTop="40dp"
				app:layout_constraintTop_toTopOf="parent">
			
			<TextView
					android:text="@string/history_003"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/textView10"
					app:layout_constraintStart_toStartOf="parent"
					android:textColor="@color/gray"
					android:textSize="@dimen/font_size_s5"
					app:layout_constraintTop_toTopOf="parent"/>
			
			<TextView
					android:text="2019年12月12日"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/end_day"
					android:textSize="@dimen/font_size_s3"
					android:textColor="@color/text_color"
					app:layout_constraintTop_toBottomOf="@+id/textView10"
					android:layout_marginTop="4dp"
					app:layout_constraintStart_toEndOf="@+id/imageView11"
					android:layout_marginStart="8dp"/>
			
			<ImageView
					android:src="@mipmap/calendar_end"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:id="@+id/imageView11"
					app:layout_constraintTop_toTopOf="@+id/end_day"
					app:layout_constraintBottom_toBottomOf="@+id/end_day"
					app:layout_constraintEnd_toStartOf="@+id/end_day"
					android:layout_marginEnd="8dp"
					app:layout_constraintStart_toStartOf="parent"/>
		
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		<TextView
				android:text="@string/history_004"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/textView16"
				android:textColor="@color/text_color"
				android:textSize="@dimen/font_size_s3"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginStart="16dp"
				android:layout_marginTop="12dp"
				app:layout_constraintTop_toBottomOf="@+id/textView14"/>
		
		<!-- 地点的选择 -->
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_height="wrap_content"
				android:background="@color/background_color"
				android:layout_width="0dp"
				android:id="@+id/location_layout"
				android:layout_marginEnd="24dp"
				app:layout_constraintTop_toBottomOf="@+id/textView14"
				app:layout_constraintEnd_toStartOf="@+id/textView11"
				android:layout_marginTop="36dp"
				app:layout_constraintStart_toStartOf="@+id/start_day_layout"
				>
			
			<TextView
					android:text="@string/history_005"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/textView20"
					app:layout_constraintStart_toStartOf="parent"
					android:textColor="@color/gray"
					android:textSize="@dimen/font_size_s5"
					app:layout_constraintTop_toTopOf="parent"/>
			
			<TextView
					android:text="@string/history_006"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/location"
					android:textSize="@dimen/font_size_s3"
					android:textColor="@color/text_color"
					app:layout_constraintTop_toBottomOf="@+id/textView20"
					android:layout_marginTop="4dp"
					app:layout_constraintStart_toEndOf="@+id/imageView21"
					android:layout_marginStart="8dp"/>
			
			<ImageView
					android:src="@mipmap/location"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:id="@+id/imageView21"
					app:layout_constraintTop_toTopOf="@+id/location"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toStartOf="@+id/location"
					/>
		
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		<Button
				android:text="@string/history_007"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:id="@+id/setting_ok"
				android:textColor="@color/white"
				android:background="@drawable/button_background3"
				app:layout_constraintStart_toEndOf="@+id/location_layout"
				android:layout_marginStart="32dp"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginEnd="32dp"
				app:layout_constraintTop_toBottomOf="@+id/textView15"
				android:layout_marginBottom="32dp"
				app:layout_constraintBottom_toBottomOf="parent"
				android:layout_marginTop="32dp"/>
	</androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.recyclerview.widget.RecyclerView
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:id="@+id/travel_list_recycler"
			android:background="@color/background_color"
			app:layout_constraintTop_toBottomOf="@+id/settings_layout"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>
	
	<!-- 设定按钮 -->
	<ImageView
			android:src="@mipmap/setting"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:id="@+id/setting_img"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginEnd="10dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
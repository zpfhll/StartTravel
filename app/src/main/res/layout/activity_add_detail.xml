<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        tools:context=".page.AddDetailActivity">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/title_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/confirm_button">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="旅途名称"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/travel_name"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_size_s0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="@string/add_detail_003"
                    android:textSize="@dimen/font_size_s3"
                    android:textColor="@color/title_color"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView29"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/travel_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"/>
            <View android:layout_width="0dp"
                  android:layout_height="80dp"
                  android:id="@+id/money_background_view"
                  android:background="@drawable/edit_background"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="24dp" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView29" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="24dp"/>
            <TextView
                    android:text="@string/add_detail_004"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_s3"
                    android:textColor="@color/text_color"
                    android:id="@+id/textView31"
                    app:layout_constraintEnd_toEndOf="@+id/money_background_view"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/money_background_view"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_red"
                    android:ems="10"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/edit_background"
                    android:id="@+id/detail_money" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/textView31" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@+id/money_background_view"
                    app:layout_constraintBottom_toBottomOf="@+id/money_background_view"
                    app:layout_constraintTop_toTopOf="@+id/money_background_view" android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            <hll.zpf.starttravel.common.components.CustomCheckboxView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:checkbox_image_width="30dp"
                    app:checkbox_image_height="30dp"
                    app:checked_image="@mipmap/checkbox_checked_red"
                    app:uncheck_image="@mipmap/checkbox_red"
                    app:checkbox_text="@string/add_detail_005"
                    app:layout_constraintTop_toBottomOf="@+id/detail_money"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:id="@+id/out_checkbox"/>

            <hll.zpf.starttravel.common.components.CustomCheckboxView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:checkbox_image_width="30dp"
                    app:checkbox_image_height="30dp"
                    app:checked_image="@mipmap/checkbox_checked_green"
                    app:uncheck_image="@mipmap/checkbox_green"
                    app:checkbox_text="@string/add_detail_006"
                    android:id="@+id/in_checkbox"
                    app:layout_constraintStart_toEndOf="@+id/out_checkbox"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/out_checkbox"
                    app:layout_constraintBottom_toBottomOf="@+id/out_checkbox">
            </hll.zpf.starttravel.common.components.CustomCheckboxView>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/out_checkbox"
                    android:id="@+id/in_detail_platform"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0">

                <TextView
                        android:text="@string/add_detail_007"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_s3"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        android:id="@+id/textView35"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                        app:layout_constraintStart_toStartOf="parent"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_background"
                        app:layout_constraintTop_toBottomOf="@+id/textView35"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/detail_in_member_list"
                        app:layout_constraintStart_toStartOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/in_checkbox"
                    android:id="@+id/out_detail_platform"
                    android:visibility="visible" app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                        android:text="@string/add_detail_008"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_s3"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        android:id="@+id/textView22"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="32dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:inputType="textPersonName"
                        android:textSize="@dimen/font_size_s2"
                        android:hint="@string/add_detail_010"
                        android:background="@drawable/edit_background"
                        android:padding="5dp"
                        android:id="@+id/detail_memo"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView22"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        android:text="@string/add_detail_009"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_s3"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        android:id="@+id/textView32"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_memo"
                        app:layout_constraintStart_toStartOf="parent"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:background="@drawable/edit_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView32"
                        android:id="@+id/detail_out_member_list" android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/title_layout">
        <include layout="@layout/activity_title"/>
    </LinearLayout>

    <Button
            android:text="@string/add_detail_011"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_background3"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
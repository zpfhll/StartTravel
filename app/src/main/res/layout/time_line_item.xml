<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/foot_left_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/first_line_view"
            app:srcCompat="@mipmap/foot_left" />

    <ImageView
            android:id="@+id/foot_right_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/first_line_view"
            app:srcCompat="@mipmap/foot_right" />

    <View
            android:id="@+id/main_line_view"
            android:layout_width="3dp"
            android:layout_height="90dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/circle_green"
            app:layout_constraintBottom_toTopOf="@+id/main_line_circle_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    <View
            android:id="@+id/first_line_view"
            android:layout_width="3dp"
            android:layout_height="90dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/circle_green"
            app:layout_constraintBottom_toTopOf="@+id/foot_right_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/add_time_line_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/add_step_button_background"
        app:layout_constraintBottom_toTopOf="@+id/main_line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/main_line_circle_view"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/circle_green"
            app:layout_constraintBottom_toTopOf="@+id/first_line_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    <View
            android:id="@+id/left_time_line_view"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/main_line_circle_view"
            app:layout_constraintEnd_toStartOf="@+id/main_line_circle_view"
            app:layout_constraintTop_toTopOf="@+id/main_line_circle_view" />

    <View
            android:id="@+id/left_time_line_circle_view"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/left_time_line_view"
            app:layout_constraintEnd_toStartOf="@+id/left_time_line_view"
            app:layout_constraintTop_toTopOf="@+id/left_time_line_view" />

    <View
            android:id="@+id/right_time_line_view"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/main_line_circle_view"
            app:layout_constraintStart_toEndOf="@+id/main_line_circle_view"
            app:layout_constraintTop_toTopOf="@+id/main_line_circle_view" />

    <View
            android:id="@+id/right_time_line_circle_view"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="1dp"
            android:background="@drawable/circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/right_time_line_view"
            app:layout_constraintStart_toEndOf="@+id/right_time_line_view"
            app:layout_constraintTop_toTopOf="@+id/right_time_line_view" />

    <View
            android:id="@+id/right_time_line_item_background"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_round_edge_green_15"
            app:layout_constraintBottom_toTopOf="@+id/right_time_line_circle_view"
            app:layout_constraintEnd_toEndOf="@+id/right_time_line_circle_view"
            app:layout_constraintStart_toStartOf="@+id/right_time_line_circle_view" />

    <View
            android:id="@+id/left_time_line_item_background"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_round_edge_green_15"
            app:layout_constraintBottom_toTopOf="@+id/left_time_line_circle_view"
            app:layout_constraintEnd_toEndOf="@+id/left_time_line_circle_view"
            app:layout_constraintStart_toStartOf="@+id/left_time_line_circle_view" />

    <TextView
            android:id="@+id/left_time_line_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年12月17日 12:30"
            android:textColor="@color/baseColor"
            android:textSize="@dimen/font_size_s7"
            app:layout_constraintBottom_toTopOf="@+id/left_time_line_circle_view"
            app:layout_constraintEnd_toEndOf="@+id/left_time_line_circle_view"
            app:layout_constraintStart_toStartOf="@+id/left_time_line_circle_view" />

    <TextView
            android:id="@+id/right_time_line_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年12月17日 12:30"
            android:textColor="@color/baseColor"
            android:textSize="@dimen/font_size_s7"
            app:layout_constraintBottom_toTopOf="@+id/right_time_line_circle_view"
            app:layout_constraintEnd_toEndOf="@+id/right_time_line_circle_view"
            app:layout_constraintStart_toStartOf="@+id/right_time_line_circle_view" />

    <hll.zpf.starttravel.common.components.CRImageView
            android:id="@+id/left_time_line_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_image"
            app:layout_constraintBottom_toBottomOf="@+id/left_time_line_item_background"
            app:layout_constraintStart_toStartOf="@+id/left_time_line_item_background"
            app:layout_constraintTop_toTopOf="@+id/left_time_line_item_background"
            app:radius="15dp" />

    <hll.zpf.starttravel.common.components.CRImageView
            android:id="@+id/right_time_line_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_image"
            app:layout_constraintBottom_toBottomOf="@+id/right_time_line_item_background"
            app:layout_constraintStart_toStartOf="@+id/right_time_line_item_background"
            app:layout_constraintTop_toTopOf="@+id/right_time_line_item_background"
            app:radius="15dp" />

    <TextView
        android:id="@+id/left_time_line_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="浅草寺"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_s5"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/left_time_line_detail_button"
        app:layout_constraintEnd_toEndOf="@+id/left_time_line_item_background"
        app:layout_constraintStart_toEndOf="@+id/left_time_line_image"
        app:layout_constraintTop_toTopOf="@+id/left_time_line_item_background" />

    <Button
        android:id="@+id/left_time_line_detail_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/detail_button_background"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/left_time_line_item_background"
        app:layout_constraintEnd_toEndOf="@+id/left_time_line_item_background"
        app:layout_constraintStart_toEndOf="@+id/left_time_line_image" />

    <TextView
        android:id="@+id/right_time_line_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="浅草寺"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_s5"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintBottom_toTopOf="@+id/right_time_line_detail_button"
        app:layout_constraintEnd_toEndOf="@+id/right_time_line_item_background"
        app:layout_constraintStart_toEndOf="@+id/right_time_line_image"
        app:layout_constraintTop_toTopOf="@+id/right_time_line_item_background" />

    <Button
        android:id="@+id/right_time_line_detail_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/detail_button_background"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/right_time_line_item_background"
        app:layout_constraintEnd_toEndOf="@+id/right_time_line_item_background"
        app:layout_constraintStart_toEndOf="@+id/right_time_line_image" />


</androidx.constraintlayout.widget.ConstraintLayout>

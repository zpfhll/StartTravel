<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <hll.zpf.starttravel.common.components.CRImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/user_image1"
            android:id="@+id/partner_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:radius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_s2"
            android:textColor="@color/title_color"
            android:id="@+id/partner_name"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/partner_image"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/partner_image"
            app:layout_constraintBottom_toBottomOf="@+id/partner_image"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/partner_add_money"
            android:textSize="@dimen/font_size_s3"
            app:layout_constraintTop_toTopOf="@+id/partner_image"
            app:layout_constraintBottom_toBottomOf="@+id/partner_image"
            app:layout_constraintEnd_toStartOf="@+id/delete_partner_bt"
            android:layout_marginEnd="24dp" android:text="ï¿¥0"/>
    <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/delete_button_background"
            android:id="@+id/delete_partner_bt"
            android:textSize="@dimen/font_size_s3"
            app:layout_constraintTop_toTopOf="@+id/partner_image"
            app:layout_constraintBottom_toBottomOf="@+id/partner_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_marginBottom="0dp"
          android:background="@color/dark_gray"
          app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

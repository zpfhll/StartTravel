<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/root_view"
        android:background="@color/background_color"
        tools:context=".page.AddTravelActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/title_layout">
        <include layout="@layout/activity_title"/>
    </LinearLayout>

    <View android:layout_width="0dp"
          android:layout_height="60dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginStart="28dp"
          android:layout_marginEnd="28dp"
          app:layout_constraintTop_toBottomOf="@+id/title_layout"
          android:layout_marginTop="24dp"
          android:id="@+id/detail_title_view"
          android:background="@drawable/circle_round_edge_detail_title_10"/>
    <TextView
            android:text="@string/travel_detail_002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_s4"
            app:layout_constraintTop_toTopOf="@+id/textView24"
            app:layout_constraintBottom_toBottomOf="@+id/textView24"
            app:layout_constraintStart_toEndOf="@+id/textView24"/>
    <TextView
            android:text="@string/travel_detail_003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_s4"
            app:layout_constraintTop_toTopOf="@+id/textView27"
            app:layout_constraintBottom_toBottomOf="@+id/textView27"
            app:layout_constraintStart_toEndOf="@+id/textView27"/>
    <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/textView22"
            android:gravity="center"
            android:background="@mipmap/line"
            app:layout_constraintStart_toStartOf="@+id/detail_title_view"
            android:layout_marginStart="33dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintBottom_toTopOf="@+id/textView12"/>
    <TextView
            android:layout_width="10dp"
            android:background="@drawable/circle_red"
            android:layout_height="10dp"
            android:textSize="@dimen/font_size_s4"
            android:id="@+id/textView24"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/detail_title_view"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/detail_title_view"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <TextView
            android:layout_width="10dp"
            android:background="@drawable/circle_green"
            android:layout_height="10dp"
            android:id="@+id/textView27"
            android:textSize="@dimen/font_size_s4"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_title_view"
            app:layout_constraintStart_toEndOf="@+id/textView4"
    />
    <TextView
            android:text="@string/travel_detail_004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_s3"
            app:layout_constraintTop_toBottomOf="@+id/detail_title_view"
            app:layout_constraintBottom_toTopOf="@+id/detail_title_view"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/travel_detail_005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView30"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_s3"
            app:layout_constraintTop_toBottomOf="@+id/detail_title_view"
            app:layout_constraintBottom_toTopOf="@+id/detail_title_view"
            app:layout_constraintEnd_toEndOf="@+id/detail_title_view"
            android:layout_marginEnd="32dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/list_view_background"
            app:layout_constraintTop_toBottomOf="@+id/detail_title_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:id="@+id/detail_list"/>


</androidx.constraintlayout.widget.ConstraintLayout>
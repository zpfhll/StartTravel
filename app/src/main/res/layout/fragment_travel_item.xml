<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/transparent"
	tools:context=".page.fragment.TravelFragment">

	<View android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="25dp"
		android:background="@drawable/shadow"
		android:id="@+id/travel_background_shadow"
		android:layout_marginTop="60dp"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintVertical_bias="0.0"/>

	<View
		android:id="@+id/view4"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginStart="12dp"
		android:layout_marginTop="70dp"
		android:layout_marginEnd="12dp"
		android:layout_marginBottom="41dp"
		android:background="@drawable/circle_round_edge_green_10"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.0" />

	<hll.zpf.starttravel.common.components.CRImageView
			android:id="@+id/travel_image"
			android:layout_width="210dp"
			android:layout_height="150dp"
			android:layout_marginStart="24dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="24dp"
			android:scaleType="centerCrop"
			android:src="@mipmap/default_image"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:radius="10dp" />

	<TextView
			android:id="@+id/travel_name_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="32dp"
			android:layout_marginTop="16dp"
			android:ellipsize="end"
			android:gravity="left"
			android:lines="1"
			android:textColor="@color/white"
			android:textSize="@dimen/font_size_s1"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/travel_image" />

	<TextView
			android:id="@+id/travel_start_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="32dp"
			android:layout_marginTop="8dp"
			android:gravity="left"
			android:textColor="@color/white"
			android:textSize="@dimen/font_size_s5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/travel_balance_money_tv" />

	<Button
		android:id="@+id/travel_action_bt"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginBottom="37dp"
		android:background="@drawable/button_background9"
		android:elevation="@dimen/font_size_s1"
		android:stateListAnimator="@null"
		android:text="@string/travel_001"
		android:textColor="@color/baseColor"
		android:textSize="@dimen/font_size_s3"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@+id/travel_background_shadow"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
			android:id="@+id/travel_money_tv"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_marginStart="3dp"
			android:layout_marginTop="8dp"
			android:text="0"
			android:textColor="@color/light_red"
			android:textSize="@dimen/font_size_s1"
			android:textStyle="bold"
			app:layout_constraintStart_toEndOf="@+id/travel_money_label_tv"
			app:layout_constraintTop_toBottomOf="@+id/travel_name_tv" />

	<TextView
		android:id="@+id/travel_money_label_tv"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginStart="32dp"
		android:background="@mipmap/consume"
		app:layout_constraintBottom_toBottomOf="@+id/travel_money_tv"
		app:layout_constraintStart_toStartOf="@+id/travel_background_shadow"
		app:layout_constraintTop_toTopOf="@+id/travel_money_tv" />

	<TextView
			android:id="@+id/travel_balance_money_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="3dp"
			android:layout_marginTop="8dp"
			android:text="0"
			android:textColor="@color/white"
			android:textSize="@dimen/font_size_s1"
			android:textStyle="bold"
			app:layout_constraintStart_toEndOf="@+id/travel_balance_money_label_tv"
			app:layout_constraintTop_toBottomOf="@+id/travel_name_tv" />

	<TextView
			android:id="@+id/travel_balance_money_label_tv"
			android:layout_width="15dp"
			android:layout_height="15dp"
			android:layout_marginStart="16dp"
			android:background="@mipmap/wallet"
			app:layout_constraintBottom_toBottomOf="@+id/travel_balance_money_tv"
			app:layout_constraintStart_toEndOf="@+id/travel_money_tv"
			app:layout_constraintTop_toTopOf="@+id/travel_balance_money_tv" />

	<TextView
			android:id="@+id/travel_person_number_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:text=""
			android:textColor="@color/white"
			android:textSize="@dimen/font_size_s3"
			android:textStyle="bold"
			app:layout_constraintBottom_toBottomOf="@+id/travel_name_tv"
			app:layout_constraintStart_toEndOf="@+id/travel_name_tv"
			app:layout_constraintTop_toTopOf="@+id/travel_name_tv" />

	<Button
		android:id="@+id/travel_item_edit"
		android:layout_width="34dp"
		android:layout_height="34dp"
		android:layout_marginBottom="45dp"
		android:background="@drawable/edit1_button_background"
		android:stateListAnimator="@null"
		app:layout_constraintBottom_toBottomOf="@+id/travel_background_shadow"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/travel_item_flag"
		android:layout_width="34dp"
		android:layout_height="34dp"
		android:layout_marginEnd="60dp"
		android:layout_marginBottom="45dp"
		android:background="@drawable/flag_button_background"
		android:stateListAnimator="@null"
		app:layout_constraintBottom_toBottomOf="@+id/travel_background_shadow"
		app:layout_constraintEnd_toStartOf="@+id/travel_item_edit" />

	<Button
		android:id="@+id/travel_item_detail"
		android:layout_width="34dp"
		android:layout_height="34dp"
		android:layout_marginStart="60dp"
		android:layout_marginBottom="45dp"
		android:background="@drawable/detail_button_background"
		android:stateListAnimator="@null"
		app:layout_constraintBottom_toBottomOf="@+id/travel_background_shadow"
		app:layout_constraintStart_toEndOf="@+id/travel_item_edit" />

	<View
		android:id="@+id/travel_none_background_shadow"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@drawable/shadow"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/travel_none_background"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="12dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="12dp"
		android:layout_marginBottom="16dp"
		android:background="@drawable/button_background5"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/travel_none_background_image"
		android:layout_width="0dp"
		android:layout_height="200dp"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:scaleType="center"
		android:src="@mipmap/welcome"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>